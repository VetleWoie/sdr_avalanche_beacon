#!/usr/bin/env python3

import matplotlib.pyplot as plt
import digital_rf as drf
import numpy as n

data_dir="data/mammuth_element_470k_100k"
channel="loop"
d=drf.DigitalRFReader(data_dir)
b=d.get_bounds(channel)
print(b)

z=d.read_vector_c81d(b[0]+100000,1000000,channel)
plt.plot(z.real)
plt.plot(z.imag)
plt.show()
